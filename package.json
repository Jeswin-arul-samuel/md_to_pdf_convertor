{
  "name": "md_to_pdf",
  "version": "2.0.1",
  "description": "Markdown to PDF Converter with Live Preview",
  "main": "main.js",
  "author": {
    "name": "Jeswin",
    "email": "jeswin.arul.samuel@gmail.com"
  },
  "homepage": "https://github.com/jeswin/md-to-pdf-converter",
  "scripts": {
    "start": "ELECTRON_DISABLE_SANDBOX=1 electron .",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --linux --win",
    "build:appimage": "electron-builder --linux AppImage"
  },
  "keywords": [
    "markdown",
    "pdf",
    "converter",
    "puppeteer"
  ],
  "author": "",
  "license": "SEE LICENSE IN LICENSE",
  "type": "commonjs",
  "dependencies": {
    "marked": "^17.0.1",
    "puppeteer": "^24.31.0"
  },
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.mdtopdf.app",
    "productName": "MD to PDF Converter",
    "files": [
      "main.js",
      "preload.js",
      "license.js",
      "system-check.js",
      "renderer/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "icon": "assets/icon.png",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "executableName": "md-to-pdf",
      "synopsis": "Convert Markdown files to PDF with live preview",
      "icon": "assets/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MD to PDF Converter",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "appImage": {
    },
    "deb": {
      "maintainer": "Jeswin <jeswin.arul.samuel@gmail.com>",
      "icon": "assets/icon.png",
      "depends": [
        "libnotify4",
        "libxtst6",
        "libnss3",
        "libglib2.0-0",
        "libx11-6",
        "libxkbfile1",
        "libfreetype6",
        "fonts-dejavu",
        "fonts-liberation"
      ]
    }
  }
}
